@model Walmart.Entity.Cidade

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    
}
@{
if (ViewBag.Erro != null)
    {
        <script type="text/javascript" language="javascript">
            alert("Erro");
        </script>   
    }
}
<h2>Editar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Editar", "Cidades", FormMethod.Post, new { @class = "" })){
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Cidade</legend>
        @Html.HiddenFor(model=>model.Codigo)
        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Estado)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CodEstado, new SelectList(ViewBag.Estados, "Codigo", "Nome"), "Escolha")
            @Html.ValidationMessageFor(model => model.CodEstado)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Capital)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capital)
            @Html.ValidationMessageFor(model => model.Capital)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
